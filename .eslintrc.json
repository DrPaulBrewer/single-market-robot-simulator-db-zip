{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
	"jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
	"ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
